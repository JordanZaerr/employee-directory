.directory-item-selector(ed-nanoscroller)
    .directory-item-filter
        .panel
            .panel-heading
                span.panel-icon
                    i.fa.fa-filter.text-primary
                span.panel-title Printers Filter
                span.panel-controls(ng-if="vm.brand || vm.printerName || vm.floors.length > 0")
                    a.panel-control-remove(ng-click="vm.clearFilter()")
            .panel-body.p10
                form.form-horizontal(name="printersFilter")
                    .form-group.mln.mrn
                        .pn
                            input.form-control.input-sm(type="text" name="printerName" placeholder="Filter by name", ng-model="vm.printerName")
                    .form-group.mln.mrn
                        .pn
                            div.bs-component
                                select.form-control.input-sm(name="brand", ng-model="vm.brand", ng-options="printer.brand as printer.brand for printer in vm.printers | unique: 'brand' | orderBy: 'brand'")
                                    option(value="", selected) All Manufacturers
                    .form-group.mln.mrn
                        span.control-label.pn.pull-left
                            label(ng-class="{'text-primary' : vm.floors.length > 0}") Floors
                        span.pn.pl20.pull-left
                            .checkbox-custom.checkbox-default
                                input(type="checkbox", id="floor6", ng-model="vm.floor['6']", ng-change="vm.filterFloors(6)")
                                label(for="floor6") 6
                        span.pn.pl20.pull-left
                            .checkbox-custom.checkbox-default
                                input(type="checkbox", id="floor7", ng-model="vm.floor['7']", ng-change="vm.filterFloors(7)")
                                label(for="floor7") 7
                        span.pn.pl20.pull-left
                            .checkbox-custom.checkbox-default
                                input(type="checkbox", id="floor8", ng-model="vm.floor['8']", ng-change="vm.filterFloors(8)")
                                label(for="floor8") 8
                    button.btn.btn-xs.btn-success.pull-right(type="submit", ng-click="vm.selectAll()", ng-disabled="!vm.allowSelectAll || vm.displayPrinterInfoType !== 'profile'") Select All
                    button.btn.btn-xs.btn-warning.pull-left(type="button", ng-click="vm.selectNone()", ng-disabled="!vm.allowSelectAll || vm.displayPrinterInfoType !== 'profile'") Select None
    h5
        span.fa.fa-print
        span Select Printers
    ul.nav.tray-nav.tray-nav-border
        li.directory-item(ng-repeat="printer in (vm.filteredPrinters = (vm.printers | orderBy: ['name'] | filter: (vm.brand || undefined) | filterBy: ['name'] : vm.printerName | filter: vm.floorFilter))", ng-class="{'active': printer.selected, 'mapped': printer.mapped}")
            a(ng-click="vm.selectPrinter(printer)")
                span {{::printer.name}}