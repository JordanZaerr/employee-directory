div.switch.switch-primary.round.switch-inline.toggle-show-seat-numbers-swicth(ng-class="vm.showSeatNumbers ? 'show-seat-numbers': 'show-employee-names'")
    input(id="toggle-show-seat-numbers" type="checkbox", ng-model="vm.showSeatNumbers")
    label(for="toggle-show-seat-numbers")

floor(class="{{vm.location}}-{{vm.floor}}", ng-if="vm.floor")
    span.floor-label
        span.label.bg-primary.fs20 {{vm.locationName}} Floor {{vm.floor}}
    ed-artifact(ng-repeat="artifact in vm.artifacts" name="{{artifact.name}}" orientation="{{artifact.orientation}}" classification="{{artifact.classification}}" xpos="{{artifact.xpos}}" ypos="{{artifact.ypos}}")
    ed-desk(ng-repeat="desk in vm.desks" location="{{desk.location}}" seat="{{desk.seat}}" orientation="{{desk.orientation}}" classification="{{desk.classification}}" xpos="{{desk.xpos}}" ypos="{{desk.ypos}}")
    ed-room(ng-repeat="room in vm.rooms" name="{{room.name}}" seat="{{room.seat}}" number="{{room.number}}" classification="{{room.classification}}" xpos="{{room.xpos}}" ypos="{{room.ypos}}")
    ed-printer(ng-repeat="printer in vm.printers" name="{{printer.name}}" orientation="{{printer.orientation}}" classification="{{printer.classification}}" xpos="{{printer.xpos}}" ypos="{{printer.ypos}}")