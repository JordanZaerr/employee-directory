.employee-selector(ng-class="{'open': vm.filterOpen}")
    .employee-filter
        .panel
            .panel-heading
                span.panel-icon
                    i.fa.fa-filter.text-primary
                span.panel-title Employees Filter
                span.panel-controls
                    a.panel-control-remove(ng-click="vm.filterOpen = !vm.filterOpen")
            .panel-body.p10
                form.form-horizontal(name="employeesFilter")
                    .form-group.mln.mrn
                        .col-xs-3.control-label.pn.pt5.pr10
                            label(for="employeeName") Name
                        .col-xs-9.pn
                            input.form-control.input-sm(type="text" name="employeeName" placeholder="Filter by name", ng-model="vm.employeeName")
                    .form-group.mln.mrn
                        .col-xs-3.control-label.pn.pt5.pr10
                            label Floors
                        .col-xs-3.pn.pt5
                            .checkbox-custom.checkbox-default
                                input(type="checkbox", id="floor6", ng-model="vm.floor['6']", ng-change="vm.filterFloors(6)")
                                label(for="floor6") 6
                        .col-xs-3.pn.pt5
                            .checkbox-custom.checkbox-default
                                input(type="checkbox", id="floor7", ng-model="vm.floor['7']", ng-change="vm.filterFloors(7)")
                                label(for="floor7") 7
                        .col-xs-3.pn.pt5
                            .checkbox-custom.checkbox-default
                                input(type="checkbox", id="floor8", ng-model="vm.floor['8']", ng-change="vm.filterFloors(8)")
                                label(for="floor8") 8
                    .form-group.mln.mrn
                        .col-xs-3.control-label.pn.pt5.pr10
                            label(for="department") Dept
                        .col-xs-9.pn
                            div.bs-component
                                select.form-control.input-sm(name="department", ng-model="vm.department", ng-options="employee.department as employee.department for employee in vm.employees | unique: 'department' | orderBy: 'department'")
                                    option(value="", selected) All Departments
                    .form-group.mln.mrn
                        .col-xs-3.control-label.pn.pt5.pr10
                            label(for="team") Team
                        .col-xs-9.pn
                            div.bs-component
                                select.form-control.input-sm(name="team", ng-model="vm.team", ng-options="employee.team as employee.team for employee in vm.employees | filter: {department: vm.department || undefined} | filter: {team : '!!'} | unique: 'team' | orderBy: 'team'")
                                    option(value="", selected) All Teams
                    button.btn.btn-xs.btn-success.pull-right.ml10(type="submit", ng-click="vm.selectAll()", ng-disabled="!vm.allowSelectAll") Select All
                    button.btn.btn-xs.btn-warning.pull-right(type="button", ng-click="vm.selectNone()") Select None
                        //.col-md-3
                            .radio-custom
                                input(type="radio", id="floor6", name="floor", value="6", ng-model="vm.floor")
                                label(for="floor6") 6
                        //.col-md-3
                            .radio-custom
                                input(type="radio" id="floor7", name="floor", value="7", ng-model="vm.floor")
                                label(for="floor7") 7
                        //.col-md-3
                            .radio-custom
                                input(type="radio" id="floor8", name="floor", value="8", ng-model="vm.floor")
                                label(for="floor8") 8
                    //.form-group
                        label.col-xs-6.control-label(for="floor") Floor
                        .col-xs-6
                            select.form-control(name="floor", ng-model="vm.floor", ng-options="floor as floor for floor in [6,7,8]")
                                option(value="", selected) All
    ul.nav.sidebar-menu
        li.sidebar-label.pt10.pb10 Select Employees
            span.sidebar-label-tray
                span.label.label-xs.cursor(ng-click="vm.filterOpen = !vm.filterOpen", ng-class="vm.filterOpen ? 'bg-primary' : 'bg-light'") Filter
        li.employee-item(ng-repeat="employee in (vm.filteredEmployees = (vm.employees | orderBy: ['name.lastName', 'name.firstName'] | filter: (vm.department || undefined) | filter: (vm.team || undefined) | filter: vm.employeeName | filter: vm.floorFilter))", ng-class="{'active': employee.selected}")
            a(href="javascript:void(0);", ng-click="vm.selectEmployee(employee)")
                span.fa(class="fa-{{employee.gender}}")
                span {{employee.name.lastName}}, {{employee.name.firstName}}