.well
    form.form-horizontal(name="signupForm")
        fieldset
            legend New User Information
            .form-group
                label.col-md-2.control-label(for="username") Username
                .col-md-10
                    input.form-control(name="username", type="text", placeholder="Username", ng-model="vm.username", required)
            .form-group
                label.col-md-2.control-label(for="password") Password
                .col-md-10
                    input.form-control(name="password", type="password", placeholder="Password", ng-model="vm.password", required)
            .form-group
                label.col-md-2.control-label(for="fame") First Name
                .col-md-10
                    input.form-control(name="fname", type="text", placeholder="First Name", ng-model="vm.fname", required)
            .form-group
                label.col-md-2.control-label(for="lname") Last Name
                .col-md-10
                    input.form-control(name="lname", type="text", placeholder="Last Name", ng-model="vm.lname", required)
            .form-group
                .col-md-10.col-offset-2
                    .pull-right
                        button.btn.btn-primary(ng-click="vm.createUser()", ng-disabled="signupForm.$invalid") Submit
                        | &nbsp;
                        a.btn.btn-default(ui-sref="login") Cancel
