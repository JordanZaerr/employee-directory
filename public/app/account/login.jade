.mw1000.center-block
    .panel.panel-primary(ng-show="vm.identity.isAuthenticated()")
        .panel-body Welcome, {{vm.identity.currentUser.firstName + " " + vm.identity.currentUser.lastName}} -
            a(href="" ng-click="vm.signout()") Sign Out
    .admin-form.theme-primary(ng-hide="vm.identity.isAuthenticated()")
        form(name="loginForm", novalidate)
            .panel.heading-border.panel-primary
                .panel-body.bg-light
                    .section-divider
                        span Admin Login
                    .row
                        .col-md-6
                            .section
                                label.field
                                    input.gui-input-mod(name="username", type="text", placeholder="Username", ng-model="vm.username", required)
                        .col-md-6
                            .section
                                label.field
                                    input.gui-input-mod(name="password", type="password", placeholder="Password", ng-model="vm.password", required)
                .panel-footer.text-right
                    button.button.btn-primary(type="submit", ng-click="vm.signin(vm.username, vm.password)", ng-disabled="loginForm.$invalid") Sign In
                    button.button.btn-default(type="reset") Cancel