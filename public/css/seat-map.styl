@import nib

floor
  background transparent url('/imagesfloor-6.png') left top no-repeat
  display: block
  height: 1149px
  position: relative
  width: 1256px

.floor-6
  background-image url('/images/floor-6.png')

.floor-7
  background-image url('/images/floor-7.png')

.floor-8
  background-image url('/images/floor-8.png')

.floor-label
  line-height 1149px
  text-align center

  span
    background-color rgba(200,200,200,.5);
    color #4a89dc
    font-size 50px
    font-weight bold
    padding 10px

$desk-border = 1px
$employee-width = 58px
$employee-height = 20px
$employee-border = 1px

$manager-width = 64px
$manager-height = 55px

$office-width = 114px
$office-height = 84px

$floor6-employee-width = 55px
$floor6-employee-height = 24px

desk
  border 1px solid transparent
  box-sizing border-box
  position absolute
  white-space nowrap

  div.seat
    font-size 12px
    text-align center

    span
      background-color transparent
      text-align center

  &.employee
    //background-color #ddd
    height $employee-height
    width $employee-width

    div.seat
      line-height $employee-height - 2 * $desk-border

    &.vert
      height $employee-width
      width $employee-height

      div.seat
        position absolute
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%) rotate(90deg)

  &.manager
    border-color transparent
    height $manager-height
    width $manager-width

    div.seat
      line-height $manager-height - 2 * $desk-border

      span
        background-color rgba(255,255,255,.65);

    &.vert
      height $manager-width
      width $manager-height

      div.seat
        line-height $manager-width - 2 * $desk-border

    &.ewa
      transform rotate(26deg)

      div.seat
        transform rotate(-26deg)

  &.office
    border-color transparent
    height $office-height
    width $office-width

    div.seat
      line-height $office-height - 2 * $desk-border

      span
        background-color rgba(255,255,255,.65);

  &.active
    z-index 1

.floor-6 desk

  &.employee
    height $floor6-employee-height
    width $floor6-employee-width

  div.seat
    font-size 12px
    line-height $floor6-employee-height - 2 * $desk-border
    text-align center

  &.vert
    height $floor6-employee-width
    width $floor6-employee-height