@import nib

floor
  background transparent url('/imagesfloor-6.png') left top no-repeat
  display: block
  height: 1149px
  position: relative
  width: 1256px

.floor-6
  background-image url('/images/floor-6.png')

.floor-7
  background-image url('/images/floor-7.png')

.floor-8
  background-image url('/images/floor-8.png')

$desk-width = 58px
$desk-height = 20px
$desk-border = 1px

$floor6-desk-width = 55px
$floor6-desk-height = 24px
$desk-border = 1px

desk
  background-color #ddd
  border 1px solid #f00
  box-sizing border-box
  height $desk-height
  position absolute
  width $desk-width
  white-space nowrap

  div.pos
    font-size 12px
    line-height $desk-height - 2 * $desk-border
    text-align center

desk.vert
  height $desk-width
  width $desk-height

  div.pos
    position absolute
    top 50%
    left 50%
    transform translateX(-50%) translateY(-50%) rotate(90deg)

desk.active
  z-index 1

.floor-6 desk
  height $floor6-desk-height
  width $floor6-desk-width

  div.pos
    font-size 12px
    line-height $floor6-desk-height - 2 * $desk-border
    text-align center

.floor-6 desk.vert
  height $floor6-desk-width
  width $floor6-desk-height
