@import nib

text-color = #666
primary-color = #4a89dc
primary-a-color = #3498db


/**************************************************
Employee Selector
**************************************************/
.employee-selector
  position relative
  top -274px
  transition top 0.3s ease-in-out

  &.open
    top 0

  .employee-filter
    color text-color
    position relative

    .panel
      border-radius 0
      margin-bottom 0

      .panel-heading
        border-radius 0

    .toggle
      background-color #fff
      border 1px solid #e2e2e2
      border-top none
      border-bottom-left-radius 3px
      border-bottom-right-radius 3px
      bottom -33px
      cursor pointer
      left 0
      padding 10px
      position absolute
      width 32px
      z-index 1

  .employee-item.ng-enter
    transition 0.15s linear all
    left -250px

  .employee-item.ng-enter.ng-enter-active
    left 0

  .employee-item.ng-leave
    transition 0.15s linear all
    left 0

  .employee-item.ng-leave.ng-leave-active
    left -250px

/**************************************************
Employee Card
**************************************************/
.employee-card:nth-child(odd)
  clear left

.employee-card .employee-photo
  width 100%

.employee-card.ng-enter
  transition 0.2s linear all
  opacity 0
  top -400px

.employee-card.ng-enter-stagger
  transition-delay 0.2s
  transition-duration 0s

.employee-card.ng-enter.ng-enter-active
  opacity 1
  top 0