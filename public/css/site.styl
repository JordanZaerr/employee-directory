ul.employee-selector
  margin-bottom 0
  padding-left 0
  list-style none

  li
    border-top 1px solid rgba(255, 255, 255, .05)
    display block
    height 37px
    line-height 37px

    &:last-child
      border-bottom 1px solid rgba(255, 255, 255, .05)

    &.selected > a
      background-color #6B6B6B

      &:hover
        background-color #6B6B6B

      > i
        color primary-color

      &:before
        background-color primary-color
        bottom 0
        content ""
        display block
        left 0
        position absolute
        top 0
        width 4px

    a
      display block
      position relative

      &:hover
        background-color #585858

        &:before
          background-color primary-color
          bottom 0
          content ""
          display block
          left 0
          position absolute
          top 0
          width 4px

      > i
        color #fff
        line-height 37px
        padding-left 13px
        text-align center
        width 38px

      span
        line-height 37px
        padding-left 6px
