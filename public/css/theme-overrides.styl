@import nib

primary-color-blue = #3498db
primary-color-red = #de5858
liazon-blue = #005295
liazon-green = #00B259

.navbar-brand img
  height 60px
  padding 5px 0

#content_wrapper
  top 110px

#topbar
  position fixed
  top 60px

  .nav.nav-list-topbar li a
    border none
    padding-bottom 15px
    position relative

    &:before
      background-color primary-color-blue
      bottom 0
      content: ""
      height 3px
      right 0
      position absolute
      transition width 0.5s ease
      width 0

  .nav.nav-list-topbar li.active a
    border none

    &:before
      width 100%

  .nav.nav-list-topbar li.location-tab a:before,
  .nav.nav-list-topbar li.active.location-tab a:before
    background-color primary-color-red
    //left 0

#sidebar_left
  transition width 0.5s ease
  width 250px
  z-index 4

  .sidebar-menu

    .sidebar-group-label
      color #cccccc
      margin-top 20px

    > li.active.location-item > a > span:nth-child(1)
      color primary-color-red

    > li
      padding 0
      line-height 37px
      height 37px
      overflow hidden
      white-space nowrap

      > a
        background-color transparent
        transition background-color 0.1s linear
        white-space nowrap

        &:hover
          background-color #585858

      span:nth-child(2)
        opacity 1
        padding-left 6px
        transition all 0.2s ease

      .sidebar-label
        color #cccccc
        font-weight bold
        padding-bottom 0
        padding-left 6px

      > span:nth-child(1)
        float left
        font-size 16px
        line-height 37px
        padding-left 13px
        text-align center
        top 0
        transition font-size 0.5s ease
        width 38px

      > a > span:nth-child(1)
        font-size 16px
        transition font-size 0.5s ease

  &.sidebar-left-sm
    width 50px

    .sidebar-label
      //display none

    .sidebar-title
      //display none

    .sidebar-menu > li > span:nth-child(1)
      font-size 24px

    .sidebar-menu > li > a > span:nth-child(1)
      font-size 20px

    .sidebar-menu > li span:nth-child(2)
      opacity 0.1
      padding-left 20px

#sidebar_left_secondary
  background #f5f5f5
  border-right 1px solid #dddddd
  font-size 13px
  left 0
  margin-left 50px
  min-height 100%
  padding-bottom 40px
  padding-top 60px
  top 0
  transition margin-left 0.5s ease
  width 200px
  z-index 3

  &.sidebar-left-lg
    margin-left 250px

  ul.tray-nav
    margin 0

    li.mapped a
      color #666
      background #fbfbfb
      transition all 0.3s ease

    &.tray-nav-border
      li.mapped:after,
      li.mapped:hover:after
        background-color primary-color-red

.nano.affix > .nano-pane
  left 0
  right auto
  width 4px

.panel-control-map-marker:after
  content "\f041"

@media (max-width: 1100px)
  #content_wrapper
    margin-left 250px
    left 0

#content
  padding 0

  .main-view .pagination
      margin 0 auto 15px

#content-footer.affix
  margin 0
  z-index 4

@media (max-width: 991px)
  #content .col-md-2 + .col-md-2,
  #content .col-md-2 + .col-md-4,
  #content .col-md-2 + .col-md-6,
  #content .col-md-4 + .col-md-2,
  #content .col-md-4 + .col-md-4,
  #content .col-md-4 + .col-md-6,
  #content .col-md-6 + .col-md-2,
  #content .col-md-6 + .col-md-4,
  #content .col-md-6 + .col-md-6
    padding-top 0