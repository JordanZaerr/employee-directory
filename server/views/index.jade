extends ../includes/layout

block main-content
    #main
        header.navbar.navbar-fixed-top.navbar-shadow
            .navbar-branding
                .navbar-brand
                    img(src="/images/liazon_directory.svg")
        aside#sidebar_left.nano.nano-light.sidebar-default.affix
            .sidebar-left-content.nano-content
                div(ui-view="sidebar")
        section#content_wrapper
            ed-content-header
            section#content
                div.main-view(ui-view="main")
            footer#content-footer.affix
                .row
                    .col-xs-6
                        span.footer-legal &copy; 2015 The Maestro
                    .col-xs-6.text-right
                        a.footer-return-top(href="#content_wrapper", du-smooth-scroll)
                            span.fa.fa-arrow-up